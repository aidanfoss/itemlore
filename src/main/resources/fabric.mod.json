{
	"schemaVersion": 1,
	"id": "itemlore",
	"version": "${version}",
	"name": "ItemLore",
	"description": "Adds Date and CST Time, as well as UID in the lore of anvilled items",
	"authors": [
		"quantumaidan"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/itemlore/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.quantumaidan.itemlore.ItemLore"
		],
		"client": [
			"net.quantumaidan.itemlore.ItemLoreClient"
		],
		"fabric-datagen": [
			"net.quantumaidan.itemlore.ItemLoreDataGenerator"
		]
	},
	"mixins": [
		"itemlore.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.15.6",
		"minecraft": "~1.20.2",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}