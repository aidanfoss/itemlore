{
	"schemaVersion": 1,
	"id": "itemlore",
	"version": "${version}",
	"name": "ItemLore",
	"description": "Adds a Lore Tag and tracks the stats of tools and armor",
	"authors": [
		"quantumaidan"
	],
	"contact": {
		"homepage": "https://github.com/aidanfoss/itemlore",
		"sources": "https://github.com/aidanfoss/itemlore"
	},
	"license": "MIT License",
	"icon": "assets/itemlore/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.quantumaidan.itemLore.ItemLore"
		],
		"client": [
			"net.quantumaidan.itemLore.ItemLoreClient"
		],
		"modmenu": [
			"net.quantumaidan.itemLore.compat.ItemLoreModMenu"
		],
		"server": [],
		"fabric-datagen": [],
		"fabric-gametest": [],
		"preLaunch": []
	},
	"mixins": [
		"itemlore.mixins.json"
	],
	"custom": {
		"mixin": {
			"config": "itemlore.mixins.json",
			"refmap": "itemlore-refmap.json",
			"debug": true
		}
	},
	"depends": {
		"fabricloader": ">=0.16.9",
		"minecraft": ">=1.21 <=1.21.10",
		"java": ">=21",
		"fabric-api": "*",
		"midnightlib": "*"
	},
	"suggests": {
		"modmenu": "*"
	}
}
