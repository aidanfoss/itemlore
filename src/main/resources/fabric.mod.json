{
	"schemaVersion": 1,
	"id": "itemlore",
	"version": "${version}",
	"name": "ItemLore",
	"description": "Uses Vanilla components to track stats and information about tools and armor",
	"authors": [
		"quantumaidan"
	],
	"contact": {
		"homepage": "https://github.com/aidanfoss/itemlore",
		"sources": "https://github.com/aidanfoss/itemlore"
	},
	"license": "MIT License",
	"icon": "assets/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.quantumaidan.itemLore.ItemLore"
		],
		"client": [
			"net.quantumaidan.itemLore.ItemLoreClient"
		],
		"server": [],
		"fabric-datagen": [],
		"fabric-gametest": [],
		"preLaunch": [],
		"modmenu": [
			"net.quantumaidan.itemLore.compat.ModMenuIntegration"
		]
	},
	"mixins": [
		"itemlore.mixins.json",
		"itemlore.compat.mixins.json"
	],
	"custom": {
		"mixin": {
			"config": "itemlore.mixins.json",
			"refmap": "itemlore-refmap.json",
			"debug": true
		}
	},
	"depends": {
		"fabricloader": ">=0.16.8",
		"minecraft": "${minecraft}",
		"midnightlib": "*"
	},
	"suggests": {
		"modmenu": "*"
	}
}